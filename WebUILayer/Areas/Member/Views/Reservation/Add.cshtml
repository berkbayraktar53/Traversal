@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="text-align:center">
        <h6 class="font-weight-bolder mb-0">Profil Bilgileri</h6>
    </div>
    <form enctype="multipart/form-data" asp-action="Index" method="post">
        <div class="form-group">
            <div class="col-lg-4">
                <label for="example-text-input" class="form-control-label">Profil Resmi</label>
                <input type="file" />
            </div>
            <div class="form-group">
                <label for="example-text-input" class="form-control-label">Ad Soyad</label>
                <input class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="example-text-input" class="form-control-label">Hakkında</label>
                <input class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="example-text-input" class="form-control-label">Kullanıcı Adı</label>
                <input class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="example-text-input" class="form-control-label">Email</label>
                <input class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="example-password-input" class="form-control-label">Şifre</label>
                <input class="form-control" required type="password" />
            </div>
            <div class="form-group" style="text-align:center">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </div>
    </form>
</div>


@model UserListDto
@{
	ViewData["Title"] = "Profili Güncelle";
	Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}

<div class="app-content content">
	<div class="content-wrapper">
		<div class="content-wrapper-before"></div>
		<div class="content-header row">
			<div class="content-header-left col-md-4 col-12 mb-2">
				<h3 class="content-header-title">Profili Güncelle</h3>
			</div>
			<div class="content-header-right col-md-8 col-12">
				<div class="breadcrumbs-top float-md-right">
					<div class="breadcrumb-wrapper mr-1">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="/Member/Profile/Index">Profile Dön</a>
							</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<div class="content-body">
			<section id="content-types">
				<div class="row match-height">
					<div class="col-xl-12 col-md-12">
						<div class="card">
							<div class="card-content">
								<div class="card-body">
									<h4 class="card-title text-center">Profil Bilgileri</h4>
								</div>
								<div class="card-body">
									<form class="form" asp-action="Edit" method="post" enctype="multipart/form-data">
										<input type="hidden" asp-for="Id" />
										<input type="hidden" asp-for="UserName" />
										<input type="hidden" asp-for="Status" />
										<div class="form-body">
											<div class="form-group row">
												<label class="col-sm-2 col-form-label">Görsel</label>
												<div class="col-sm-10">
													<input type="file" class="form-control-file" asp-for="UserImage" autocomplete="off" />
													<span class="text-danger" asp-validation-for="UserImage"></span>
												</div>
											</div>
											<div class="form-group row">
												<label class="col-sm-2 col-form-label">Adı Soyadı</label>
												<div class="col-sm-10">
													<input type="text" class="form-control" asp-for="NameSurname" autocomplete="off" />
													<span class="text-danger" asp-validation-for="NameSurname"></span>
												</div>
											</div>
											<div class="form-group row">
												<label class="col-sm-2 col-form-label">Hakkında</label>
												<div class="col-sm-10">
													<input type="text" class="form-control" asp-for="AboutUser" autocomplete="off" />
													<span class="text-danger" asp-validation-for="AboutUser"></span>
												</div>
											</div>
											<div class="form-group row">
												<label class="col-sm-2 col-form-label">Email</label>
												<div class="col-sm-10">
													<input type="email" class="form-control" asp-for="Email" autocomplete="off" />
													<span class="text-danger" asp-validation-for="Email"></span>
												</div>
											</div>
											<div class="form-group row">
												<label class="col-sm-2 col-form-label">Şifre</label>
												<div class="col-sm-10">
													<input type="password" class="form-control" asp-for="Password" autocomplete="off" />
													<span class="text-danger" asp-validation-for="Password"></span>
												</div>
											</div>
										</div>
										<div class="form-actions center">
											<button type="submit" class="btn btn-primary">Güncelle</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>
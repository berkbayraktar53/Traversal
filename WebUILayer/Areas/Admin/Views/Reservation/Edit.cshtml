@model Reservation
@{
    ViewData["Title"] = "Rezervasyon Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header text-center">
			<h4 class="mb-0">Rezervasyon Düzenle</h4>
		</div>
		<div class="card-body">
			<form asp-action="Edit" method="post">
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="ReservationStatus" />
				<input type="hidden" asp-for="Status" />
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Adı Soyadı</label>
					<div class="col-sm-10">
						@Html.DropDownListFor(x => x.UserId, (List<SelectListItem>)ViewBag.users, new { @class = "form-select" })
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Rota</label>
					<div class="col-sm-10">
						@Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.destinations, new { @class = "form-select" })
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Kişi Sayısı</label>
					<div class="col-sm-10">
						<input type="number" class="form-control" asp-for="PersonCount" autocomplete="off" />
						<span class="spanClass" asp-validation-for="PersonCount"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Tarih</label>
					<div class="col-sm-10">
						<input type="date" class="form-control" asp-for="Date" autocomplete="off" />
						<span class="spanClass" asp-validation-for="Date"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Açıklama</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" asp-for="Description" autocomplete="off" />
						<span class="spanClass" asp-validation-for="Description"></span>
					</div>
				</div>
				<div class="row justify-content-end text-center">
					<div class="col-sm-12">
						<button type="submit" class="btn btn-warning">Güncelle</button>
						<a class="btn btn-primary" style="color:white" href="/Admin/Reservation/Index">Geri Dön</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
@{
	ViewData["Title"] = "Anasayfa";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-lg-12 mb-4 order-0">
		<div class="card">
			<div class="d-flex align-items-end row">
				<div class="col-sm-8">
					<div class="card-body">
						<h5 class="card-title text-primary">Admin Paneline Hoşgeldiniz! 🎉</h5>
						<p class="mb-4">
							Site ile ilgili tüm bilgiler bu panelde yer almaktadır. İçerikler düzenlenebilir, silinebilir veya yeni eklemeler yapılabilir. Bu sayede site rahatlıkla kontrol edilebilir.
						</p>
					</div>
				</div>
				<div class="col-sm-4 text-center text-sm-left">
					<div class="card-body pb-0 px-0 px-md-4">
						<img src="~/templates/admin/assets/img/illustrations/man-with-laptop-light.png" height="140" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-6 col-md-4 order-1">
		<div class="row">
			<div class="col-lg-6 col-md-12 col-6 mb-4">
				<div class="card">
					<div class="card-body">
						<div class="card-title d-flex align-items-start justify-content-between">
							<div class="avatar flex-shrink-0">
								<img src="~/templates/admin/assets/img/icons/unicons/wallet-info.png" class="rounded" />
							</div>
							<div class="dropdown">
								<button class="btn p-0" type="button" id="cardOpt6" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="bx bx-dots-vertical-rounded"></i>
								</button>
								<div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
									<a class="dropdown-item" href="/Admin/User/Index">Listeye Git</a>
								</div>
							</div>
						</div>
						<span class="fw-semibold d-block mb-1">Toplam Kullanıcı: @ViewBag.totalUserCount</span>
						<h5 class="card-title text-nowrap mt-3">@ViewBag.totalActiveUserCount Aktif Kullanıcı</h5>
					</div>
				</div>
			</div>
			<div class="col-lg-6 col-md-12 col-6 mb-4">
				<div class="card">
					<div class="card-body">
						<div class="card-title d-flex align-items-start justify-content-between">
							<div class="avatar flex-shrink-0">
								<img src="~/templates/admin/assets/img/icons/unicons/chart-success.png" class="rounded" />
							</div>
							<div class="dropdown">
								<button class="btn p-0" type="button" id="cardOpt6" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="bx bx-dots-vertical-rounded"></i>
								</button>
								<div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
									<a class="dropdown-item" href="/Admin/Reservation/Index">Listeye Git</a>
								</div>
							</div>
						</div>
						<span class="fw-semibold d-block mb-1">Toplam Rezervasyon: @ViewBag.totalReservationCount</span>
						<h5 class="card-title text-nowrap mt-3">@ViewBag.totalActiveReservationCount Aktif Rezervasyon</h5>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-6 col-md-4 order-1">
		<div class="row">
			<div class="col-lg-6 col-md-12 col-6 mb-4">
				<div class="card">
					<div class="card-body">
						<div class="card-title d-flex align-items-start justify-content-between">
							<div class="avatar flex-shrink-0">
								<img src="~/templates/admin/assets/img/icons/unicons/paypal.png" class="rounded" />
							</div>
							<div class="dropdown">
								<button class="btn p-0" type="button" id="cardOpt6" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="bx bx-dots-vertical-rounded"></i>
								</button>
								<div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
									<a class="dropdown-item" href="/Admin/Destination/Index">Listeye Git</a>
								</div>
							</div>
						</div>
						<span class="fw-semibold d-block mb-1">Toplam Rota: @ViewBag.totalDestinationCount</span>
						<h5 class="card-title text-nowrap mt-3">@ViewBag.totalActiveDestinationCount Aktif Rota</h5>
					</div>
				</div>
			</div>
			<div class="col-lg-6 col-md-12 col-6 mb-4">
				<div class="card">
					<div class="card-body">
						<div class="card-title d-flex align-items-start justify-content-between">
							<div class="avatar flex-shrink-0">
								<img src="~/templates/admin/assets/img/icons/unicons/cc-primary.png" class="rounded" />
							</div>
							<div class="dropdown">
								<button class="btn p-0" type="button" id="cardOpt6" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="bx bx-dots-vertical-rounded"></i>
								</button>
								<div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
									<a class="dropdown-item" href="/Admin/Guide/Index">Listeye Git</a>
								</div>
							</div>
						</div>
						<span class="fw-semibold d-block mb-1">Toplam Rehber: @ViewBag.totalGuideCount</span>
						<h5 class="card-title text-nowrap mt-3">@ViewBag.totalActiveGuideCount Aktif Rehber</h5>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	@await Component.InvokeAsync("AdminContactList")
	@await Component.InvokeAsync("AdminReservationList")
	@await Component.InvokeAsync("AdminDestinationList")
</div>
@model Contact
@{
    ViewData["Title"] = "İletişim Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header text-center">
			<h4 class="mb-0">İletişim Düzenle</h4>
		</div>
		<div class="card-body">
			<form asp-action="Edit" method="post">
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="Date" />
				<input type="hidden" asp-for="Status" />
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Ad Soyad</label>
					<div class="col-sm-4">
						<input type="text" asp-for="NameSurname" class="form-control" autocomplete="off" />
						<span asp-validation-for="NameSurname" class="spanClass"></span>
					</div>
					<label class="col-sm-2 col-form-label">Email</label>
					<div class="col-sm-4">
						<input type="text" asp-for="Email" class="form-control" autocomplete="off" />
						<span asp-validation-for="Email" class="spanClass"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Konu</label>
					<div class="col-sm-10">
						<input type="text" asp-for="Subject" class="form-control" autocomplete="off" />
						<span asp-validation-for="Subject" class="spanClass"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Mesaj</label>
					<div class="col-sm-10">
						<input type="text" asp-for="Message" class="form-control" autocomplete="off" />
						<span asp-validation-for="Message" class="spanClass"></span>
					</div>
				</div>
				<div class="row justify-content-end text-center">
					<div class="col-sm-12">
						<button type="submit" class="btn btn-warning">Güncelle</button>
						<a class="btn btn-primary" style="color:white" href="/Admin/Contact/Index">Geri Dön</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
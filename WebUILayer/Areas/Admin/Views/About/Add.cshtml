@model AboutListDto
@{
	ViewData["Title"] = "Hakkımızda Ekle";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header text-center">
			<h4 class="mb-0">Hakkımızda Ekle</h4>
		</div>
		<div class="card-body">
			<form asp-action="Add" method="post" enctype="multipart/form-data">
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Görsel</label>
					<div class="col-sm-4">
						<img src="~/images/about/default.jpg" class="rounded-circle img-center" height="40" width="40" id="pictureShown" />
					</div>
					<label class="col-sm-2 col-form-label">Resim Seç</label>
					<div class="col-sm-4">
						<input type="file" asp-for="Image" class="form-control" id="aboutImage" />
						<span asp-validation-for="Image" class="spanClass"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Başlık</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="name" asp-for="Title" autocomplete="off" />
						<span class="spanClass" asp-validation-for="Title"></span>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Açıklama</label>
					<div class="col-sm-10">
						<textarea class="form-control" rows="5" asp-for="Description"></textarea>
						<span class="spanClass" asp-validation-for="Description"></span>
					</div>
				</div>
				<div class="row justify-content-end text-center">
					<div class="col-sm-12">
						<button type="submit" class="btn btn-success">Ekle</button>
						<a class="btn btn-primary" style="color:white" href="/Admin/About/Index">Geri Dön</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<script src="~/templates/admin/assets/vendor/libs/jquery/jquery.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		$("#aboutImage").change(function (e) {
			$("#pictureShown").attr('src', URL.createObjectURL(e.target.files[0]));
		});
	});
</script>
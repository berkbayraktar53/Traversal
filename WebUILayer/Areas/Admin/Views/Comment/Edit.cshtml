@model Comment
@{
	ViewData["Title"] = "Yorum Düzenle";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
	<div class="card mb-4">
		<div class="card-header text-center">
			<h4 class="mb-0">Yorum Ekle</h4>
		</div>
		<div class="card-body">
			<form asp-action="Edit" method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="NameSurname" />
				<input type="hidden" asp-for="CommentDate" />
				<input type="hidden" asp-for="Status" />
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Rota</label>
					<div class="col-sm-10">
						@Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.destinationValues, new { @class = "form-select" })
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Yorum</label>
					<div class="col-sm-10">
						<textarea class="form-control" rows="5" asp-for="CommentContent"></textarea>
						<span class="spanClass" asp-validation-for="CommentContent"></span>
					</div>
				</div>
				<div class="row justify-content-end text-center">
					<div class="col-sm-12">
						<button type="submit" class="btn btn-warning">Güncelle</button>
						<a class="btn btn-primary" style="color:white" href="/Admin/Comment/Index">Geri Dön</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
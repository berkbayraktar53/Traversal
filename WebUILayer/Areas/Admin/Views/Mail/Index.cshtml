@model MailRequest
@{
	ViewData["Title"] = "Mail Gönder";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header align-items-center justify-content-between text-center">
				<h5 class="mb-0 text-center">Mail Gönderme Ekranı</h5>
			</div>
			<div class="card-body">
				<form asp-action="Index" asp-controller="Mail" method="post">
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Ad Soyad</label>
						<div class="col-sm-10">
							<input asp-for="Name" type="text" class="form-control" placeholder="Ad soyad giriniz..." required autocomplete="off" />
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Email</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<input asp-for="ReceiverMail" type="email" class="form-control" placeholder="Email giriniz..." required autocomplete="off" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Konu</label>
						<div class="col-sm-10">
							<input asp-for="Subject" type="text" class="form-control" placeholder="Konu giriniz..." required autocomplete="off" />
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Mesaj</label>
						<div class="col-sm-10">
							<textarea asp-for="Body" rows="5" class="form-control" placeholder="Mesaj giriniz..." required></textarea>
						</div>
					</div>
					<div class="row justify-content-end">
						<div class="col-sm-10 text-center" style="margin-right:80px;">
							<button type="submit" class="btn btn-primary">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
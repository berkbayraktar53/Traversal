@model UserListDto
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header text-center">
            <h4 class="mb-0">Kullanıcı Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Status" />
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Görsel</label>
                    <div class="col-sm-4">
                        <img src="~/memberimages/user.png" class="rounded-circle img-center" height="40" width="40" id="pictureShown" />
                    </div>
                    <label class="col-sm-2 col-form-label">Resim Seç</label>
                    <div class="col-sm-4">
                        <input type="file" asp-for="UserImage" class="form-control" id="userImage" />
                        <span asp-validation-for="UserImage" class="spanClass"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Adı Soyadı</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="name" asp-for="NameSurname" autocomplete="off" />
                        <span class="spanClass" asp-validation-for="NameSurname"></span>
                    </div>
                    <label class="col-sm-2 col-form-label">Hakkında</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" asp-for="AboutUser" autocomplete="off" />
                        <span class="spanClass" asp-validation-for="AboutUser"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" asp-for="Email" autocomplete="off" />
                        <span class="spanClass" asp-validation-for="Email"></span>
                    </div>
                    <label class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" asp-for="Password" autocomplete="off" />
                        <span class="spanClass" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="row justify-content-end text-center">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Güncelle</button>
                        <a class="btn btn-primary" style="color:white" href="/Admin/User/Index">Geri Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/templates/admin/assets/vendor/libs/jquery/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#userImage").change(function (e) {
            $("#pictureShown").attr('src', URL.createObjectURL(e.target.files[0]));
        });
    });
</script>
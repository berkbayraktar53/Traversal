    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="NameSurname" />
    <br />
    <label>Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>
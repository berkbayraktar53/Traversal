@model Destination
@{
    ViewData["Title"] = "Rota Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header text-center">
            <h4 class="mb-0">Rota Ekle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Görsel</label>
                    <div class="col-sm-4">
                        <img class="img-center" id="pictureShown" />
                    </div>
                    <label class="col-sm-2 col-form-label">Resim</label>
                    <div class="col-sm-4">
                        <input type="file" class="form-control" id="destinationImage" asp-for="Image" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Rota</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="name" asp-for="City" />
                        <span class="spanClass" asp-validation-for="City"></span>
                    </div>
                    <label class="col-sm-2 col-form-label">Fiyat</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="price" asp-for="Price" />
                        <span class="spanClass" asp-validation-for="Price"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Gün Gece</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" asp-for="DayNight" />
                        <span class="spanClass" asp-validation-for="DayNight"></span>
                    </div>
                    <label class="col-sm-2 col-form-label">Kapasite</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" id="capacity" asp-for="Capacity" />
                        <span class="spanClass" asp-validation-for="Capacity"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        <span class="spanClass" asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="row justify-content-end text-center">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Ekle</button>
                        <a class="btn btn-primary" style="color:white" onclick="window.history.back()">Geri Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/templates/admin/assets/vendor/libs/jquery/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#destinationImage").change(function (e) {
            $("#pictureShown").attr('src', URL.createObjectURL(e.target.files[0]));
        });
        $("#price").val(0)
        $("#capacity").val(0)
    });
</script>
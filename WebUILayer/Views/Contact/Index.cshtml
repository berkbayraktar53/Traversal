@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="~/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>İletişim</li>
            </ul>
        </div>
    </div>
</section>
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgileri</h5>
                            <p class="mt-3 mb-4">
                                Soru, görüş ve önerileriniz için email yada telefon ile bize ulaşabilirsiniz. 7/24 hizmetinizdeyiz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email</h6>
                            <p>info@traversal.com</p>
                            <h6 class="mt-4">Adres</h6>
                            <p>Edremit Mahallesi Merzifon Caddesi Zencefil Sokak No 14 Fatih/İstanbul</p>
                            <h6 class="mt-4">İletişim</h6>
                            <p class="margin-top">0212 987 65 43</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form class="signin-form" asp-action="Index" method="post">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="NameSurname" placeholder="Ad Soyad" />
                            </div>
                            <div class="form-group">
                                <input type="email" name="Email" placeholder="Email" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Subject" placeholder="Konu" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="Message" placeholder="Mesaj"></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
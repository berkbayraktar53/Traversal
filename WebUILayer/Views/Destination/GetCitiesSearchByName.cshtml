@model IPagedList<Destination>
@{
	ViewData["Title"] = "Arama Sonucu";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
	<div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
		<div class="container">
			<h2 class="title">@ViewBag.cityName Turu</h2>
			<ul class="breadcrumbs-custom-path mt-2">
				<li><a href="/Destination/Index">Rotalar</a></li>
				<li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>Arama Sonucu</li>
			</ul>
		</div>
	</div>
</section>
<section class="w3l-pricinghny">
	<div class="pricing-inner-info py-5">
		<div class="container py-lg-4">
			<div class="pricing-info-grids">
				@foreach (var destination in Model)
				{
					<div class="price-box">
						<div class="grid grid-column-2">
							<div class="column pr-img-gd">
								<h6 class="pricehead">
									<span class="fa fa-plane mr-2" aria-hidden="true"></span> @destination.City Turu
								</h6>
							</div>
							<div class="column text-lg-center">
								<p class="price-title">@destination.Date.ToString("dd/MM/yyyy dddd")</p>
								<p class="price-title">@destination.DayNight</p>
							</div>
							<div class="column price-number text-md-right">
								<h3 class="pricing">
									@String.Format("{0:N0}", @destination.Price) ₺
								</h3>
								<a href="/Destination/Detail/@destination.Id" class="btn btn-primary btn-info ml-lg-3">Tur Detayı</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>
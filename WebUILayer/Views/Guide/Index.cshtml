@model IPagedList<Guide>
@{
    ViewData["Title"] = "Rehberlerimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Tur Rehberleri</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="~/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>Rehberlerimiz</li>
            </ul>
        </div>
    </div>
</section>
<section class="w3l-team" id="team">
    <div class="team-block py-3">
        <div class="container py-lg-3">
            <div class="row">
                @foreach (var guide in Model)
                {
                    <div class="col-lg-3 col-6 mt-lg-5 mt-4">
                        <div class="box16">
                            <a href="#"><img src="~/images/guide/@guide.GuideImage" alt="resim bulunamadı" class="img-fluid" /></a>
                            <div class="box-content">
                                <h3 class="title"><a href="#">@guide.NameSurname</a></h3>
                                <span class="post">@guide.Description</span>
                                <ul class="social">
                                    <li>
                                        <a href="@guide.InstagramLink" target="_blank" class="facebook">
                                            <span class="fa fa-instagram"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@guide.TwitterLink" target="_blank" class="twitter">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div style="display:flex;justify-content:center;">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
            })
        </div>
    </div>
</section>
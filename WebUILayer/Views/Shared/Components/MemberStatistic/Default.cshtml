<div class="col-xl-4 col-lg-12">
	<div class="card">
		<div class="card-header">
			<h4 class="card-title text-center">İstatistik Bilgileri</h4>
			<a class="heading-elements-toggle">
				<i class="la la-ellipsis-v font-medium-3"></i>
			</a>
			<div class="heading-elements">
				<ul class="list-inline mb-0">
					<li>
						<a data-action="reload">
							<i class="ft-rotate-cw"></i>
						</a>
					</li>
					<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
				</ul>
			</div>
		</div>
		<div class="card-content">
			<div class="card-body">
				<div class="card-text">
					<blockquote class="blockquote">
						<p class="lead">
							Toplam Tur Rehberi Sayısı: @ViewBag.totalGuideCount
						</p>
						<p class="lead">
							Toplam Tur Rotası Sayısı: @ViewBag.totalDestinationCount
						</p>
						<p class="lead">
							Toplam Yorum Sayısı: @ViewBag.totalCommentCount
						</p>
						<p class="lead">
							Toplam Bildirim Sayısı: @ViewBag.totalNotificationCount
						</p>
						<p class="lead">
							Aktif Rezervasyon Sayısı: @ViewBag.totalAcceptedReservationCount
						</p>
						<p class="lead">
							Geçmiş Rezervasyon Sayısı: @ViewBag.totalPreviousReservationCount
						</p>
					</blockquote>
				</div>
			</div>
		</div>
	</div>
</div>
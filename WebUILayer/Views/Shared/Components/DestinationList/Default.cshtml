@model List<Destination>
<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Seyahatini Planla</h6>
            <h3 class="hny-title">Son Eklenen Rotalar</h3>
        </div>
        <div class="row bottom-ab-grids">
            @foreach (var destination in Model)
            {
                <div class="col-lg-6 subject-card mt-4">
                    <div class="subject-card-header p-4">
                        <a href="/Destination/Detail/@destination.Id" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="~/images/destination/@destination.Image" class="img-fluid" alt="resim bulunamadı">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                    <h4>@destination.City</h4>
                                    <p>@destination.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class="">Tarih</h6>
                                        <span style="color:#777777">@destination.Date.ToString("dd MMM yyyy")</span>
                                    </div>
                                    <div class="dst-btm">
                                        <h6 class="">Kapasite</h6>
                                        <span style="color:#777777">@destination.Capacity Kişi</span>
                                    </div>
                                    <div class="dst-btm">
                                        <h6 class="">Fiyat</h6>
                                        <span style="color:#777777">@String.Format("{0:n}", @destination.Price) ₺</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="text-center">
        <a href="/Destination/Index" class="btn btn-info" style="color:white">Tüm Rotaları Gör</a>
    </div>
</section>
@model List<Destination>
<section class="w3l-main-slider" id="home">
	<div class="banner-content">
		<div id="demo-1"
			 data-zs-src='["/templates/traversal/assets/images/banner1.jpg", "/templates/traversal/assets/images/banner2.jpg","/templates/traversal/assets/images/banner3.jpg", "/templates/traversal/assets/images/banner4.jpg"]'
			 data-zs-overlay="dots">
			<div class="demo-inner-content">
				<div class="container">
					<div class="banner-infhny">
						<h3>Seyahatler için başka yerlere gitmene gerek yok</h3>
						<h6 class="mb-3">Konforlu seyahat ve güzel bir tatil için bir sonraki maceranı hemen planla</h6>
						<div class="flex-wrap search-wthree-field mt-md-5 mt-4">
							<form asp-action="GetCitiesSearchByName" asp-controller="Destination" method="post" class="booking-form">
								<div class="row book-form">
									<div class="form-input col-md-4 mt-md-0 mt-3">
										<select name="cityName" class="selectpicker">
											@foreach (var destination in Model)
											{
												<option value="@destination.City">@destination.City</option>
											}
										</select>
									</div>
									<div class="form-input col-md-4 mt-md-0 mt-3">
										<input type="date" placeholder="Tarih" required>
									</div>
									<div class="bottom-btn col-md-4 mt-md-0 mt-3">
										<button class="btn btn-style btn-secondary" type="submit">
											<span class="fa fa-search mr-3" aria-hidden="true"></span> Ara
										</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
@model List<Client>
<section class="w3l-clients" id="clients">
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 pb-lg-0">
            <div class="heading text-center mx-auto">
                <h6 class="sub-title text-center">Mutlu Müşteriler</h6>
                <h3 class="hny-title mb-md-5 mb-4">Müşteri Yorumları</h3>
            </div>
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
                    @foreach (var client in Model)
                    {
                        <div class="item">
                            <div class="testimonial-content">
                                <div class="testimonial">
                                    <blockquote>
                                        <span class="fa fa-quote-left" aria-hidden="true"></span>
                                        @client.ClientComment
                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="~/images/client/@client.ClientImage" class="img-fluid" alt="resim bulunamadı">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@client.NameSurname</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
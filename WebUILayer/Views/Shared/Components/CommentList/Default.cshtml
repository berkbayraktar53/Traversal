@model List<Comment>
<div class="comments mt-5">
	<h4 class="side-title ">Yorumlar (@Model.Count)</h4>
	@foreach (var comment in Model)
	{
		<div class="media mt-4">
			<div class="img-circle">
				<img src="~/images/user/user.png" class="img-fluid" />
			</div>
			<div class="media-body">
				<ul class="time-rply mb-2">
					<li>
						<a href="#URL" class="name mt-0 mb-2 d-block">@comment.NameSurname</a>
						@comment.CommentDate.ToString("dd MMMM yyyy HH:mm")
					</li>
				</ul>
				<p>
					@comment.CommentContent
				</p>
			</div>
		</div>
	}
</div>
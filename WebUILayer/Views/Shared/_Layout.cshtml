@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!doctype html>
<html lang="tr">
@await Html.PartialAsync("~/Views/Shared/_LayoutPartial/_HeadPartial.cshtml")
<body>
	<header id="site-header" class="fixed-top">
		<div class="container">
			@*@await Html.PartialAsync("~/Views/Shared/_LayoutPartial/_NavbarPartial.cshtml")*@
			<nav class="navbar navbar-expand-lg stroke">
				<h1>
					<a class="navbar-brand mr-lg-5" href="~/">
						Traversal
					</a>
				</h1>
				<button class="navbar-toggler  collapsed bg-gradient" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
					<span class="navbar-toggler-icon fa icon-close fa-times"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="~/">@localizer["Anasayfa"]</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/About/Index">@localizer["Hakkımızda"]</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Destination/Index">@localizer["Rotalar"]</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Guide/Index">@localizer["Rehberlerimiz"]</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Contact/Index">@localizer["İletişim"]</a>
						</li>
						@if (User.Identity.IsAuthenticated)
						{
							
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" href="/Auth/Login">@localizer["Giriş Yap"]</a>
							</li>
						}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="/Home/Index/?culture=tr" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fa fa-globe"></i> @localizer["Dil Seçin"] <span class="fa fa-angle-down"></span>
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown1">
								<a class="dropdown-item" href="/Home/Index/?culture=tr">
									<i class="flag-icon flag-icon-tr"></i> @localizer["Türkçe"]
								</a>
								<a class="dropdown-item" href="/Home/Index/?culture=en">
									<i class="flag-icon flag-icon-us"></i> @localizer["İngilizce"]
								</a>
								<a class="dropdown-item" href="/Home/Index/?culture=fr">
									<i class="flag-icon flag-icon-fr"></i> @localizer["Fransızca"]
								</a>
								<a class="dropdown-item" href="/Home/Index/?culture=de">
									<i class="flag-icon flag-icon-de"></i> @localizer["Almanca"]
								</a>
								<a class="dropdown-item" href="/Home/Index/?culture=es">
									<i class="flag-icon flag-icon-es"></i> @localizer["İspanyolca"]
								</a>
								<a class="dropdown-item" href="/Home/Index/?culture=it">
									<i class="flag-icon flag-icon-it"></i> @localizer["İtalyanca"]
								</a>
							</div>
						</li>
					</ul>
				</div>
				@if (User.Identity.IsAuthenticated)
				{
					<div class="d-lg-block d-none">
						<a href="/Member/Reservation/Add" class="btn btn-style btn-secondary">@localizer["Rezervasyon Yap"]</a>
					</div>
				}
				else
				{
					<div class="d-lg-block d-none">
						<a href="/Auth/Login" class="btn btn-style btn-secondary">@localizer["Rezervasyon Yap"]</a>
					</div>
				}
				<div class="mobile-position">
					<nav class="navigation">
						<div class="theme-switch-wrapper">
							<label class="theme-switch" for="checkbox">
								<input type="checkbox" id="checkbox">
								<div class="mode-container">
									<i class="gg-sun"></i>
									<i class="gg-moon"></i>
								</div>
							</label>
						</div>
					</nav>
				</div>
			</nav>
		</div>
	</header>
	@RenderBody()
	@await Html.PartialAsync("~/Views/Shared/_LayoutPartial/_FooterPartial.cshtml")
	@await Html.PartialAsync("~/Views/Shared/_LayoutPartial/_ScriptPartial.cshtml")
	@await Component.InvokeAsync("Notyf")
</body>
</html>